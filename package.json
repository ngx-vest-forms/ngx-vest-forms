{
  "name": "ngx-vest-forms",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "api": "json-server projects/examples/src/backend/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --config vitest.config.ts",
    "prepare": "husky",
    "build:app": "ng build examples --configuration=production --base-href=/ngx-vest-forms/",
    "build:lib": "ng build ngx-vest-forms --configuration=production",
    "build:ci": "npm run build:lib && npm run build:app",
    "postbuild:lib": "copyfiles README.md dist/ngx-vest-forms",
    "test:lib": "vitest run --config vitest.config.ts projects/ngx-vest-forms",
    "test:examples": "vitest run --config vitest.config.ts projects/examples",
    "storybook": "ng run ngx-vest-forms:storybook",
    "storybook:build": "ng run ngx-vest-forms:build-storybook",
    "storybook:test": "rm -rf dist/storybook/ngx-vest-forms && ng run ngx-vest-forms:build-storybook && concurrently --kill-others --success first \"http-server dist/storybook/ngx-vest-forms -p 6006 -s\" \"wait-on tcp:6006 && test-storybook -c projects/ngx-vest-forms/.storybook\"",
    "test:ci": "npm run test:lib && npm run test:examples",
    "test:coverage": "ng test --coverage",
    "semantic-release": "semantic-release",
    "prettier:check": "prettier --check \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "prettier:format": "prettier --write \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "e2e": "ng e2e",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "21.0.1",
    "@angular/compiler": "21.0.1",
    "@angular/core": "21.0.1",
    "@angular/forms": "21.0.1",
    "@angular/platform-browser": "21.0.1",
    "@angular/platform-browser-dynamic": "21.0.1",
    "@angular/router": "21.0.1",
    "rxjs": "~7.8.2",
    "tslib": "~2.8.1",
    "vest": "~5.4.6"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.1.1",
    "@analogjs/vitest-angular": "^2.1.1",
    "@angular-devkit/build-angular": "21.0.1",
    "@angular/build": "21.0.1",
    "@angular/cli": "21.0.1",
    "@angular/compiler-cli": "21.0.1",
    "@chromatic-com/storybook": "~4.1.3",
    "@commitlint/cli": "~20.1.0",
    "@commitlint/config-conventional": "~20.0.0",
    "@playwright/test": "1.57.0",
    "@semantic-release/changelog": "~6.0.3",
    "@semantic-release/git": "~10.0.1",
    "@storybook/addon-coverage": "~3.0.0",
    "@storybook/addon-docs": "10.1.0",
    "@storybook/addon-links": "10.1.0",
    "@storybook/angular": "10.1.0",
    "@storybook/test-runner": "~0.24.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/angular": "~18.1.1",
    "@testing-library/dom": "~10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "~14.6.1",
    "@vitest/browser": "^4.0.14",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/eslint-plugin": "^1.5.0",
    "angular-eslint": "21.0.1",
    "concurrently": "~9.2.1",
    "copyfiles": "~2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "~10.1.8",
    "eslint-plugin-prettier": "~5.5.4",
    "eslint-plugin-storybook": "~10.1.0",
    "http-server": "~14.1.1",
    "husky": "~9.1.7",
    "jsdom": "^27.2.0",
    "json-server": "~0.17.4",
    "ng-packagr": "~21.0.0",
    "ngx-mask": "~20.0.3",
    "playwright": "~1.57.0",
    "playwright-ng-schematics": "^21.0.1",
    "postcss": "~8.5.6",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "~25.0.2",
    "storybook": "10.1.0",
    "tailwindcss": "^4.1.17",
    "ts-node": "~10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.48.0",
    "vitest": "^4.0.14",
    "wait-on": "~9.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-vest-forms/ngx-vest-forms.git"
  },
  "overrides": {
    "@angular/common": "21.0.1",
    "@angular/compiler": "21.0.1",
    "@angular/compiler-cli": "21.0.1",
    "@angular/core": "21.0.1",
    "@angular/forms": "21.0.1",
    "@angular/platform-browser": "21.0.1",
    "@angular/platform-browser-dynamic": "21.0.1",
    "@angular/router": "21.0.1",
    "@storybook/angular": {
      "@angular/common": "$@angular/common",
      "@angular/compiler": "$@angular/compiler",
      "@angular/compiler-cli": "$@angular/compiler-cli",
      "@angular/core": "$@angular/core",
      "@angular/forms": "$@angular/forms",
      "@angular/platform-browser": "$@angular/platform-browser",
      "@angular/platform-browser-dynamic": "$@angular/platform-browser-dynamic",
      "@angular/router": "$@angular/router",
      "@angular/cli": "$@angular/cli"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
