{
  "name": "simplified",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng dev",
    "api": "json-server projects/examples/src/backend/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build:app": "ng build examples --configuration=production --base-href=/ngx-vest-forms/",
    "build:ci": "npm run build:lib && npm run build:app",
    "build:lib": "ng build ngx-vest-forms --configuration=production",
    "format:check": "prettier --check \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "format": "prettier --write \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "lint": "ng lint",
    "semantic-release": "semantic-release",
    "storybook": "ng run ngx-vest-forms:storybook",
    "storybook:build": "npx ng run ngx-vest-forms:build-storybook",
    "storybook:preview": "http-server dist/storybook/ngx-vest-forms --port 6006 --silent",
    "storybook:test:ci": "npx run-p --race storybook:test storybook:preview",
    "storybook:test": "wait-on http://127.0.0.1:6006 && test-storybook -c projects/ngx-vest-forms/.storybook --url http://127.0.0.1:6006 --",
    "test:ci": "npm run test:lib",
    "test:lib": "jest",
    "test": "jest",
    "prepare": "husky",
    "postbuild:lib": "copyfiles README.md dist/ngx-vest-forms"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "19.2.5",
    "@angular/common": "19.2.5",
    "@angular/compiler": "19.2.5",
    "@angular/core": "19.2.5",
    "@angular/forms": "19.2.5",
    "@angular/platform-browser": "19.2.5",
    "@angular/platform-browser-dynamic": "19.2.5",
    "@angular/router": "19.2.5",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "vest": "^5.4.6",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.6",
    "@angular/cli": "19.2.6",
    "@angular/compiler-cli": "19.2.5",
    "@chromatic-com/storybook": "^3.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@compodoc/compodoc": "^1.1.26",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-coverage": "^1.0.5",
    "@storybook/addon-docs": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/angular": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "~0.22.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/jest": "^29.5.14",
    "angular-eslint": "19.3.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.5.4",
    "json-server": "^0.17.4",
    "ng-packagr": "19.2.1",
    "ngx-mask": "^19.0.6",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.51.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "semantic-release": "^24.2.3",
    "semantic-release-cli": "^5.4.6",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.29.0",
    "wait-on": "^8.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simplifiedcourses/ngx-vest-forms.git"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "./projects/ngx-vest-forms/src/setup-jest.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
