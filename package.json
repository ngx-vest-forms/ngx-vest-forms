{
  "name": "simplified",
  "version": "0.0.0-development",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng dev examples",
    "api": "json-server projects/examples/src/backend/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "build:app": "ng build examples --configuration=production --base-href=/ngx-vest-forms/",
    "build:ci": "npm run build:lib && npm run build:app",
    "build:lib": "ng build ngx-vest-forms --configuration=production",
    "format:check": "prettier --check \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "format": "prettier --write \"projects/**/*.{ts,js,json,css,scss,html}\" --experimental-cli",
    "lint": "ng lint",
    "semantic-release": "semantic-release",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile.junit=test-results.xml",
    "test": "vitest",
    "prepare": "husky",
    "postbuild:lib": "copyfiles README.md dist/ngx-vest-forms"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "20.0.6",
    "@angular/compiler": "20.0.6",
    "@angular/core": "20.0.6",
    "@angular/forms": "20.0.6",
    "@angular/platform-browser": "20.0.6",
    "@angular/router": "20.0.6",
    "@standard-schema/spec": "^1.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "vest": "^5.4.6"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^1.19.0",
    "@analogjs/vitest-angular": "^1.19.0",
    "@angular/build": "20.0.5",
    "@angular/cli": "20.0.5",
    "@angular/compiler-cli": "20.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/angular": "^17.4.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/browser": "~3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "angular-eslint": "20.1.1",
    "arktype": "^2.1.20",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.30.1",
    "eslint-plugin-unicorn": "~59.0.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "json-server": "^0.17.4",
    "ng-packagr": "20.0.1",
    "ngx-mask": "^19.0.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "semantic-release": "^24.2.6",
    "semantic-release-cli": "^5.4.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.35.1",
    "valibot": "^1.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3",
    "zod": "^3.25.67"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simplifiedcourses/ngx-vest-forms.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
