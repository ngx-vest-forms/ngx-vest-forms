    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
