{
  "name": "ngx-vest-forms",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "api": "json-server projects/examples/src/backend/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --config jest.config.ts",
    "prepare": "husky install",
    "build:app": "ng build examples --configuration=production --base-href=/ngx-vest-forms/",
    "build:lib": "ng build ngx-vest-forms --configuration=production",
    "build:ci": "npm run build:lib && npm run build:app",
    "postbuild:lib": "copyfiles README.md dist/ngx-vest-forms",
    "test:lib": "jest --config jest.config.ts --testPathPatterns=projects/ngx-vest-forms",
    "test:examples": "jest --config jest.config.ts --testPathPatterns=projects/examples",
    "storybook": "ng run ngx-vest-forms:storybook",
    "storybook:build": "ng run ngx-vest-forms:build-storybook",
    "storybook:test": "rm -rf dist/storybook/ngx-vest-forms && ng run ngx-vest-forms:build-storybook && concurrently --kill-others --success first \"http-server dist/storybook/ngx-vest-forms -p 6006 -s\" \"wait-on tcp:6006 && test-storybook -c projects/ngx-vest-forms/.storybook\"",
    "test:ci": "npm run test:lib && npm run test:examples && npm run test:integration",
    "test:integration": "npm run build:lib && jest --config jest.integration.config.ts",
    "semantic-release": "semantic-release",
    "prettier:check": "prettier --check \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "prettier:format": "prettier --write \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "e2e": "ng e2e",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "~21.0.0",
    "@angular/compiler": "~21.0.0",
    "@angular/core": "~21.0.0",
    "@angular/forms": "~21.0.0",
    "@angular/platform-browser": "~21.0.0",
    "@angular/platform-browser-dynamic": "~21.0.0",
    "@angular/router": "~21.0.0",
    "rxjs": "~7.8.2",
    "tslib": "~2.8.1",
    "vest": "~5.4.6"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0",
    "@angular/cli": "~21.0.0",
    "@angular/compiler-cli": "~21.0.0",
    "@chromatic-com/storybook": "~4.1.3",
    "@commitlint/cli": "~20.1.0",
    "@commitlint/config-conventional": "~20.0.0",
    "@playwright/test": "1.56.1",
    "@semantic-release/changelog": "~6.0.3",
    "@semantic-release/git": "~10.0.1",
    "@storybook/addon-coverage": "~3.0.0",
    "@storybook/addon-docs": "~10.0.8",
    "@storybook/addon-links": "~10.0.8",
    "@storybook/angular": "~10.0.8",
    "@storybook/test-runner": "~0.24.1",
    "@swc/core": "~1.15.2",
    "@swc/jest": "~0.2.39",
    "@tailwindcss/forms": "~0.5.10",
    "@testing-library/angular": "~18.1.1",
    "@testing-library/dom": "~10.4.1",
    "@testing-library/user-event": "~14.6.1",
    "@types/jasmine": "~5.1.13",
    "@types/jest": "~30.0.0",
    "angular-eslint": "20.6.0",
    "autoprefixer": "~10.4.22",
    "concurrently": "~9.2.1",
    "copyfiles": "~2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "~10.1.8",
    "eslint-plugin-jest": "^29.1.0",
    "eslint-plugin-prettier": "~5.5.4",
    "http-server": "~14.1.1",
    "husky": "~9.1.7",
    "i18next": "~25.6.3",
    "jasmine-core": "~5.12.1",
    "jest": "~30.2.0",
    "jest-environment-jsdom": "~30.2.0",
    "jest-preset-angular": "^15.0.3",
    "json-server": "~0.17.4",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "~21.0.0",
    "ngx-mask": "~20.0.3",
    "npm-run-all": "~4.1.5",
    "playwright": "~1.56.1",
    "playwright-ng-schematics": "^2.1.1",
    "postcss": "~8.5.6",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "~25.0.2",
    "semantic-release-cli": "~5.4.6",
    "storybook": "~10.0.8",
    "tailwindcss": "~3.4.3",
    "ts-node": "~10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.47.0",
    "wait-on": "~9.0.3",
    "eslint-plugin-storybook": "10.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-vest-forms/ngx-vest-forms.git"
  },
  "overrides": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@storybook/angular": {
      "@angular/common": "$@angular/common",
      "@angular/compiler": "$@angular/compiler",
      "@angular/compiler-cli": "$@angular/compiler-cli",
      "@angular/core": "$@angular/core",
      "@angular/forms": "$@angular/forms",
      "@angular/platform-browser": "$@angular/platform-browser",
      "@angular/platform-browser-dynamic": "$@angular/platform-browser-dynamic",
      "@angular/router": "$@angular/router",
      "@angular/cli": "$@angular/cli"
    },
    "jest-preset-angular": {
      "@angular/compiler-cli": "$@angular/compiler-cli",
      "@angular/core": "$@angular/core",
      "@angular/platform-browser": "$@angular/platform-browser",
      "@angular/platform-browser-dynamic": "$@angular/platform-browser-dynamic",
      "@angular/compiler": "$@angular/compiler"
    }
  },
  "optionalDependencies": {
    "@swc/core-darwin-arm64": "~1.15.1",
    "@swc/core-darwin-x64": "~1.15.1",
    "@swc/core-linux-x64-gnu": "~1.15.1",
    "@swc/core-linux-x64-musl": "~1.15.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
