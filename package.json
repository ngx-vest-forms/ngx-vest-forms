{
  "name": "simplified",
  "version": "0.0.0-development",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "api": "json-server projects/examples/src/backend/db.json",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --config jest.config.ts",
    "prepare": "husky install",
    "build:app": "ng build examples --configuration=production --base-href=/ngx-vest-forms/",
    "build:lib": "ng build ngx-vest-forms --configuration=production",
    "build:ci": "npm run build:lib && npm run build:app",
    "postbuild:lib": "copyfiles README.md dist/ngx-vest-forms",
    "test:lib": "jest --config jest.config.ts",
    "storybook": "ng run ngx-vest-forms:storybook",
    "storybook:build": "ng run ngx-vest-forms:build-storybook",
  "storybook:test": "rm -rf dist/storybook/ngx-vest-forms && ng run ngx-vest-forms:build-storybook && concurrently --kill-others --success first \"http-server dist/storybook/ngx-vest-forms -p 6006 -s\" \"wait-on tcp:6006 && test-storybook -c projects/ngx-vest-forms/.storybook\"",
    "test:ci": "npm run test:lib",
    "semantic-release": "semantic-release",
    "prettier:check": "prettier --check \"projects/**/*.{ts,js,json,css,scss,html}\"",
    "prettier:format": "prettier --write \"projects/**/*.{ts,js,json,css,scss,html}\""
  },
  "private": false,
  "dependencies": {
    "@angular/common": "~20.3.1",
    "@angular/compiler": "~20.3.1",
    "@angular/core": "~20.3.1",
    "@angular/forms": "~20.3.1",
    "@angular/platform-browser": "~20.3.1",
    "@angular/platform-browser-dynamic": "~20.3.1",
    "@angular/router": "~20.3.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "vest": "^5.4.6",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~20.3.2",
    "@angular-eslint/builder": "~20.3.0",
    "@angular-eslint/schematics": "~20.3.0",
    "@angular/build": "~20.3.2",
    "@angular/cli": "~20.3.2",
    "@angular/compiler-cli": "~20.3.1",
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
