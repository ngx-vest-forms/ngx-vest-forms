    "@angular/build": "~20.3.3",
    "@angular/cli": "~20.3.3",
    "@angular/compiler-cli": "~20.3.2",
    "@chromatic-com/storybook": "~4.1.1",
    "@commitlint/cli": "~20.0.0",
