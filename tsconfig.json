{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@shikijs/core/types": ["node_modules/@shikijs/types/dist/index.d.mts"],
      "ngx-vest-forms": [
        "projects/ngx-vest-forms/public-api.ts",
        "dist/ngx-vest-forms"
      ],
      "ngx-vest-forms/*": [
        "projects/ngx-vest-forms/*/src/public-api.ts",
        "projects/ngx-vest-forms/*/public-api.ts",
        "dist/ngx-vest-forms/*"
      ],
      "ngx-vest-forms/form-field": [
        "projects/ngx-vest-forms/form-field/src/public-api.ts",
        "dist/ngx-vest-forms/form-field"
      ],
      "ngx-vest-forms/schemas": [
        "projects/ngx-vest-forms/schemas/src/public-api.ts",
        "dist/ngx-vest-forms/schemas"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "typeCheckHostBindings": true,
    "extendedDiagnostics": {
      "checks": {
        "controlFlowPreventingContentProjection": "error",
        "interpolatedSignalNotInvoked": "error",
        "invalidBananaInBox": "error",
        "missingControlFlowDirective": "error",
        "missingNgForOfLet": "error",
        "missingStructuralDirective": "error",
        "nullishCoalescingNotNullable": "error",
        "optionalChainNotNullable": "error",
        "skipHydrationNotStatic": "error",
        "suffixNotSupported": "error",
        "textAttributeNotBinding": "error",
        "uninvokedFunctionInEventBinding": "error",
        "uninvokedTrackFunction": "error",
        "unparenthesizedNullishCoalescing": "error",
        "unusedLetDeclaration": "error",
        "unusedStandaloneImports": "error"
      }
    }
  }
}
