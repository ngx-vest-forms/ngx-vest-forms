{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "paths": {
      "ngx-vest-forms": [
        "dist/ngx-vest-forms",
        "projects/ngx-vest-forms/src/public-api.ts"
      ],
      "ngx-vest-forms/*": [
        "dist/ngx-vest-forms/*",
        "projects/ngx-vest-forms/*/public-api.ts"
      ],
      "ngx-vest-forms/smart-state": [
        "dist/ngx-vest-forms/smart-state",
        "projects/ngx-vest-forms/smart-state/public-api.ts"
      ],
      "ngx-vest-forms/control-wrapper": [
        "dist/ngx-vest-forms/control-wrapper",
        "projects/ngx-vest-forms/control-wrapper/public-api.ts"
      ],
      "ngx-vest-forms/schemas": [
        "dist/ngx-vest-forms/schemas",
        "projects/ngx-vest-forms/schemas/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "typeCheckHostBindings": true,
    "extendedDiagnostics": {
      "checks": {
        "invalidBananaInBox": "error",
        "controlFlowPreventingContentProjection": "error",
        "unusedStandaloneImports": "error",
        "nullishCoalescingNotNullable": "error",
        "optionalChainNotNullable": "error",
        "missingControlFlowDirective": "error",
        "textAttributeNotBinding": "error",
        "missingNgForOfLet": "error",
        "missingStructuralDirective": "error",
        "suffixNotSupported": "error",
        "interpolatedSignalNotInvoked": "error",
        "uninvokedFunctionInEventBinding": "error",
        "unusedLetDeclaration": "error",
        "skipHydrationNotStatic": "error",
        "unparenthesizedNullishCoalescing": "error",
        "uninvokedTrackFunction": "error"
      }
    }
  }
}
